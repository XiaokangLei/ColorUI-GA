<!--pages/index/component/countdown/countdown.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">倒计时</view>
</cu-custom>

<view class="cu-bar bg-white">
  <view class="action">
    <text class="cuIcon-titles text-blue"></text>基础样式
  </view>
</view>

<view class="bg-white padding-bottom">
  <view class="flex justify-center align-center padding text-lg">
    <view class="cu-tag radius bg-orange light text-lg">{{left_time_list[0]}}</view>
    <text class="margin-lr-xs">天</text>
    <view class="cu-tag radius bg-orange light text-lg">{{left_time_list[1]}}</view>
    <text class="margin-lr-xs">时</text>
    <view class="cu-tag radius bg-orange light text-lg">{{left_time_list[2]}}</view>
    <text class="margin-lr-xs">分</text>
    <view class="cu-tag radius bg-orange light text-lg">{{left_time_list[3]}}</view>
    <text class="margin-left-xs">秒</text>
  </view>
</view>

<view class="cu-bar bg-white margin-top-sm">
  <view class="action">
    <text class="cuIcon-titles text-blue"></text>自定义
  </view>
</view>

<view class="bg-white">
  <view class="flex justify-center align-center padding text-lg">
    <view class="cu-tag radius bg-pink light text-lg">{{left_time_list[0]}}</view>
    <text class="margin-lr-xs">天</text>
    <view class="cu-tag radius bg-pink light text-lg">{{left_time_list[1]}}</view>
    <text class="margin-lr-xs">时</text>
    <view class="cu-tag radius bg-pink light text-lg">{{left_time_list[2]}}</view>
    <text class="margin-lr-xs">分</text>
    <view class="cu-tag radius bg-pink light text-lg">{{left_time_list[3]}}</view>
    <text class="margin-left-xs">秒</text>
  </view>
</view>

<view class="bg-white">
  <view class="flex justify-center align-center padding text-lg">
    <view class="cu-tag round bg-orange text-lg">{{left_time_list[0]}}</view>
    <text class="margin-lr-xs">天</text>
    <view class="cu-tag round bg-orange text-lg">{{left_time_list[1]}}</view>
    <text class="margin-lr-xs">时</text>
    <view class="cu-tag round bg-orange text-lg">{{left_time_list[2]}}</view>
    <text class="margin-lr-xs">分</text>
    <view class="cu-tag round bg-orange text-lg">{{left_time_list[3]}}</view>
    <text class="margin-left-xs">秒</text>
  </view>
</view>

<view class="bg-white padding-bottom">
  <view class="flex justify-center align-center padding text-lg">
    <view class="solid radius-df padding-xs text-lg">{{left_time_list[0]}}</view>
    <text class="margin-lr-xs">天</text>
    <view class="solid radius-df padding-xs text-lg">{{left_time_list[1]}}</view>
    <text class="margin-lr-xs">时</text>
    <view class="solid radius-df padding-xs text-lg">{{left_time_list[2]}}</view>
    <text class="margin-lr-xs">分</text>
    <view class="solid radius-df padding-xs text-lg">{{left_time_list[3]}}</view>
    <text class="margin-left-xs">秒</text>
  </view>
</view>

<view class="cu-bar bg-white margin-top-sm">
  <view class="action">
    <text class="cuIcon-titles text-blue"></text>拆分显示
  </view>
</view>

<view class="bg-white padding-bottom">
  <view class="flex justify-center align-center padding text-lg">
    <block wx:for="{{left_time_list_date[0]}}" wx:key="item">
      <view class="cu-tag radius bg-orange text-lg">{{item}}</view>
    </block>
    <text class="margin-lr-xs">天</text>
    <block wx:for="{{left_time_list_date[1]}}" wx:key="item">
      <view class="cu-tag radius bg-orange text-lg">{{item}}</view>
    </block>
    <text class="margin-lr-xs">时</text>
    <block wx:for="{{left_time_list_date[2]}}" wx:key="item">
      <view class="cu-tag radius bg-orange text-lg">{{item}}</view>
    </block>
    <text class="margin-lr-xs">分</text>
    <block wx:for="{{left_time_list_date[3]}}" wx:key="item">
      <view class="cu-tag radius bg-orange text-lg">{{item}}</view>
    </block>
    <text class="margin-left-xs">秒</text>
  </view>
</view>

